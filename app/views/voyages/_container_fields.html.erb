<div class="nested-fields" data-controller="slim">
  <%= f.hidden_field :id, data: {slim_target: "id"} %>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="my-5"> 
      <%= f.label :number %>
      <%= f.select :number, Container.all.pluck(:number, :number), {}, :placeholder => "Enter container number", data: {action: "change->slim#handleChange", slim_target: "number"} %>
    </div>
    <div class="my-5">
      <%= f.label :size %>
      <%= f.text_field :size, data: {slim_target: "size"} %>
    </div>
    <div class="my-5">
      <%= f.label :price %>
      <%= f.text_field :price, data: {slim_target: "price"} %>
    </div>
  </div>
 <div class="my-5"> 
    <%= link_to_remove_association "Delete", f, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
